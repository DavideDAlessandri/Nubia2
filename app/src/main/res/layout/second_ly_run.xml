<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:rotation="180"
    android:keepScreenOn="true">>

    <FrameLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/marqueeText"
            android:layout_width="700dp"
            android:layout_height="457dp"
            android:layout_marginLeft="-470dp"
            android:ellipsize="marquee"
            android:fontFamily="@font/ehsmb"
            android:marqueeRepeatLimit="marquee_forever"
            android:padding="2dp"
            android:rotation="90"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Test Test Test Test"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="70sp"
            android:translationX="-16dp"
            android:translationY="120dp" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:translationY="448dp"
            app:srcCompat="@drawable/runtime_bg" />

        <ImageView
            android:id="@+id/color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/statusbar_green" />

        <ImageView
            android:id="@+id/label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/runtime_green" />


    </FrameLayout>

</LinearLayout>
