<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/main_screen" />

        <TextView
            android:id="@+id/RunPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/frau_2"
            android:text="Run"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:padding="5dp"
            android:rotation="90"
            android:layout_gravity="center"
            android:translationY="-283dp"
            android:translationX="55dp"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/TeachPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/frau_2"
            android:text="Teach"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:padding="5dp"
            android:rotation="90"
            android:layout_gravity="center"
            android:translationY="-266dp"
            android:translationX="4dp"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/HandPage"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/frau_2"
            android:padding="5dp"
            android:rotation="90"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="Hand guide"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="40sp"
            android:translationX="-45dp"
            android:translationY="-197dp" />

        <TextView
            android:id="@+id/AddOnsPage"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/frau_2"
            android:padding="5dp"
            android:rotation="90"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="Add-Ons"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="40sp"
            android:translationX="55dp"
            android:translationY="305dp" />

        <TextView
            android:id="@+id/MonitorPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/frau_2"
            android:text="Monitor"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:padding="5dp"
            android:rotation="90"
            android:layout_gravity="center"
            android:translationY="251dp"
            android:translationX="4dp"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/SettingsPage"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/frau_2"
            android:padding="5dp"
            android:rotation="90"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="Settings"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="40sp"
            android:translationX="-45dp"
            android:translationY="289dp" />

        <Button
            android:id="@+id/connectButton"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/frau_2"
            android:padding="5dp"
            android:rotation="90"
            android:shadowColor="#000000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="5"
            android:text="Conn."
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="24sp"
            android:background="#0000ffff"
            android:translationX="-35dp"
            android:translationY="-26dp" />


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
