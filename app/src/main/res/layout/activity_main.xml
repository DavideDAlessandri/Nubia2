<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/secondPage"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="268dp"
            android:layout_height="113dp"
            android:layout_gravity="center"
            android:backgroundTint="#000000"
            android:fontFamily="@font/ehsmb"
            android:rotation="90"
            android:text="Run"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="25sp"
            android:translationX="22dp"
            android:translationY="-160dp" />

        <Button
            android:id="@+id/thirdPage"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="186dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ehsmb"
            android:rotation="90"
            android:text="Ver.1"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="25sp"
            android:translationX="-22dp"
            android:translationY="-160dp" />

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="250dp"
            android:layout_height="154dp"
            android:layout_gravity="center"
            android:rotation="90"
            android:src="@drawable/gif_circle"
            android:translationX="0dp"
            android:translationY="0dp"
            />

        <Button
            android:id="@+id/fourthPage"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="213dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/ehsmb"
            android:rotation="90"
            android:text="Settings"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="25sp"
            android:translationX="22dp"
            android:translationY="160dp" />

        <Button
            android:id="@+id/fifthPage"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ehsmb"
            android:layout_gravity="center"
            android:rotation="90"
            android:text="Ver.2"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="25sp"
            android:translationX="-22dp"
            android:translationY="160dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ehsmb"
            android:text="Rossini"
            android:textColor="#FFFFFF"
            android:textColorHint="#FDFDFD"
            android:layout_gravity="center"
            android:translationY="-290dp"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textSupsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ehsmb"
            android:text="SUPSI"
            android:textColor="#FFFFFF"
            android:textColorHint="#FDFDFD"
            android:layout_gravity="center"
            android:translationY="290dp"
            android:textSize="24sp" />

        <Button
            android:id="@+id/connectButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:translationY="-245dp"
            android:text="Connect" />


    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
